<!-- BEGIN BODY // -->
<table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody" style="background-color: #f4f4f4;">
  <tr>
    <td valign="top" class="bodyContainer">
      <!-- Header with Logo -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #2c3e50; padding: 30px 0;">
        <tr>
          <td align="center">
            <h1 style="color: #ffffff; font-family: Arial, sans-serif; font-size: 28px; margin: 0; font-weight: 300;">
              <span style="color: #FF6B35; font-weight: bold;">KOSMOS</span> FACILITY SOLUTIONS
            </h1>
            <p style="color: #95a5a6; font-family: Arial, sans-serif; font-size: 14px; margin: 10px 0 0 0;">
              Admin Panel Notification
            </p>
          </td>
        </tr>
      </table>

      <!-- Main Content -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; padding: 40px 30px;">
        <tr>
          <td>
            <!-- Alert Badge -->
            <table border="0" cellpadding="0" cellspacing="0" style="margin: 0 0 20px 0;">
              <tr>
                <td style="background-color: #FF6B35; color: #ffffff; font-family: Arial, sans-serif; font-size: 12px; font-weight: bold; padding: 8px 15px; border-radius: 20px; text-transform: uppercase;">
                  üîî New Service Request
                </td>
              </tr>
            </table>

            <h2 style="color: #2c3e50; font-family: Arial, sans-serif; font-size: 24px; margin: 0 0 20px 0; font-weight: 600;">
              Action Required: Review Service Request
            </h2>
            
            <div style="background: #FF6B35; height: 3px; width: 60px; margin: 0 0 25px 0;"></div>
            
            <p style="color: #555555; font-family: Arial, sans-serif; font-size: 16px; line-height: 1.6; margin: 0 0 25px 0;">
              A new service request has been submitted and requires your review and approval.
            </p>

            <!-- Customer Info Box -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #e8f4f8; border-left: 4px solid #3498db; margin: 0 0 20px 0;">
              <tr>
                <td style="padding: 20px;">
                  <h3 style="color: #2c3e50; font-family: Arial, sans-serif; font-size: 16px; margin: 0 0 12px 0; font-weight: 600;">
                    üë§ Customer Information
                  </h3>
                  
                  <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                      <td style="padding: 6px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px; width: 35%;">
                        <strong>Name:</strong>
                      </td>
                      <td style="padding: 6px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= customerName %>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 6px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Email:</strong>
                      </td>
                      <td style="padding: 6px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= customerEmail %>
                      </td>
                    </tr>
                    <% if (customerPhone) { %>
                    <tr>
                      <td style="padding: 6px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Phone:</strong>
                      </td>
                      <td style="padding: 6px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= customerPhone %>
                      </td>
                    </tr>
                    <% } %>
                  </table>
                </td>
              </tr>
            </table>

            <!-- Service Details Box -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f8f9fa; border-left: 4px solid #FF6B35; margin: 0 0 20px 0;">
              <tr>
                <td style="padding: 25px;">
                  <h3 style="color: #2c3e50; font-family: Arial, sans-serif; font-size: 16px; margin: 0 0 12px 0; font-weight: 600;">
                    üîß Service Details
                  </h3>
                  
                  <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px; width: 35%;">
                        <strong>Request ID:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <span style="background-color: #ffe5e0; color: #FF6B35; padding: 4px 10px; border-radius: 4px; font-weight: bold;">
                          #<%= requestId %>
                        </span>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Service Type:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= serviceName %>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Property:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= propertyName %>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Address:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= propertyAddress %>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Scheduled Date:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong><%= scheduledDate %> at <%= scheduledTime %></strong>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Estimated Duration:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <%= estimatedDuration %> minutes
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Estimated Price:</strong>
                      </td>
                      <td style="padding: 8px 0; font-family: Arial, sans-serif; font-size: 16px;">
                        <span style="color: #27ae60; font-weight: bold;">$<%= estimatedPrice %></span>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Status:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <span style="background-color: #fff3cd; color: #856404; padding: 4px 12px; border-radius: 4px; font-size: 13px; font-weight: 600;">
                          ‚è≥ <%= status %>
                        </span>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Priority:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        <span style="<%= priority === 'high' ? 'background-color: #f8d7da; color: #721c24;' : priority === 'medium' ? 'background-color: #fff3cd; color: #856404;' : 'background-color: #d1ecf1; color: #0c5460;' %> padding: 4px 12px; border-radius: 4px; font-size: 13px; font-weight: 600; text-transform: uppercase;">
                          <%= priority %>
                        </span>
                      </td>
                    </tr>
                    <% if (isRecurring) { %>
                    <tr>
                      <td style="padding: 8px 0; color: #555555; font-family: Arial, sans-serif; font-size: 14px;">
                        <strong>Recurring:</strong>
                      </td>
                      <td style="padding: 8px 0; color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px;">
                        Yes - <%= recurrenceFrequency %>
                      </td>
                    </tr>
                    <% } %>
                  </table>
                  
                  <% if (notes) { %>
                  <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid #dee2e6;">
                    <p style="color: #555555; font-family: Arial, sans-serif; font-size: 13px; margin: 0 0 8px 0;">
                      <strong>üìù Customer Notes:</strong>
                    </p>
                    <p style="color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px; margin: 0; background-color: #ffffff; padding: 12px; border-radius: 4px; border: 1px solid #e0e0e0;">
                      <%= notes %>
                    </p>
                  </div>
                  <% } %>
                  
                  <% if (specialInstructions) { %>
                  <div style="margin-top: 15px;">
                    <p style="color: #555555; font-family: Arial, sans-serif; font-size: 13px; margin: 0 0 8px 0;">
                      <strong>‚ö†Ô∏è Special Instructions:</strong>
                    </p>
                    <p style="color: #2c3e50; font-family: Arial, sans-serif; font-size: 14px; margin: 0; background-color: #fffbe6; padding: 12px; border-radius: 4px; border: 1px solid #ffe58f;">
                      <%= specialInstructions %>
                    </p>
                  </div>
                  <% } %>
                </td>
              </tr>
            </table>

            <!-- CTA Button -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 30px 0;">
              <tr>
                <td align="center">
                  <a href="<%= adminPanelUrl %>" style="background-color: #FF6B35; color: #ffffff; font-family: Arial, sans-serif; font-size: 16px; font-weight: bold; text-decoration: none; padding: 16px 40px; border-radius: 6px; display: inline-block; box-shadow: 0 4px 6px rgba(255, 107, 53, 0.3);">
                    Review & Approve Request ‚Üí
                  </a>
                </td>
              </tr>
            </table>

            <!-- Quick Actions -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f0f0f0; border-radius: 8px; margin: 20px 0 0 0;">
              <tr>
                <td style="padding: 20px;">
                  <p style="color: #777777; font-family: Arial, sans-serif; font-size: 13px; line-height: 1.6; margin: 0; text-align: center;">
                    <strong>Tip:</strong> Access the admin panel to view full details, assign staff, adjust pricing, or approve/reject this request.
                  </p>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

      <!-- Footer -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #2c3e50; padding: 25px 30px;">
        <tr>
          <td align="center">
            <p style="color: #95a5a6; font-family: Arial, sans-serif; font-size: 13px; margin: 0 0 10px 0;">
              Kosmos Facility Solutions - Admin Panel
            </p>
            <p style="color: #7f8c8d; font-family: Arial, sans-serif; font-size: 12px; margin: 0;">
              This is an automated notification for administrators only.
            </p>
            <p style="color: #7f8c8d; font-family: Arial, sans-serif; font-size: 12px; margin: 5px 0 0 0;">
              ¬© <%= new Date().getFullYear() %> Kosmos Facility Solutions. All rights reserved.
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
