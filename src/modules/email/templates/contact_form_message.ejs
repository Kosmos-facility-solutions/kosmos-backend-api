<!-- BEGIN BODY // -->
<table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody" style="background-color: #f8f9fa;">
  <tr>
    <td valign="top" class="bodyContainer">
      <!-- Header -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; padding: 40px 0; border-bottom: 1px solid #e9ecef;">
        <tr>
          <td align="center">
            <h1 style="color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 26px; margin: 0; font-weight: 700; letter-spacing: -0.5px;">
              <span style="color: #0066FF;">KOSMOS</span> FACILITY SOLUTIONS
            </h1>
            <p style="color: #6c757d; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 13px; margin: 8px 0 0 0; font-weight: 500;">
              Website Inquiry Notification
            </p>
          </td>
        </tr>
      </table>

      <!-- Main Content -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; padding: 50px 40px;">
        <tr>
          <td>
            <!-- Badge -->
            <table border="0" cellpadding="0" cellspacing="0" style="margin: 0 0 25px 0;">
              <tr>
                <td style="background: linear-gradient(135deg, #0066FF 0%, #0052CC 100%); color: #ffffff; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 12px; font-weight: 600; padding: 10px 20px; border-radius: 24px; text-transform: uppercase; letter-spacing: 0.5px; box-shadow: 0 2px 8px rgba(0, 102, 255, 0.25);">
                  ✉️ New Contact Form Submission
                </td>
              </tr>
            </table>

            <h2 style="color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 26px; margin: 0 0 10px 0; font-weight: 600;">
              Someone wants to talk with us
            </h2>
            <div style="background: #0066FF; height: 3px; width: 50px; margin: 0 0 30px 0; border-radius: 2px;"></div>

            <p style="color: #495057; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px; line-height: 1.7; margin: 0 0 30px 0;">
              A visitor completed the “Contact Us” form on the marketing website. Review their details below and reach out to continue the conversation.
            </p>

            <!-- Details -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f8f9fa; border-radius: 10px; border: 1px solid #e9ecef; margin: 0 0 25px 0;">
              <tr>
                <td style="padding: 25px;">
                  <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                      <td style="padding: 10px 0; width: 30%; color: #6c757d; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 14px; font-weight: 600;">Name</td>
                      <td style="padding: 10px 0; color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px; font-weight: 600;">
                        <%= name %>
                      </td>
                    </tr>
                    <tr>
                      <td style="padding: 10px 0; width: 30%; color: #6c757d; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 14px; font-weight: 600;">Email</td>
                      <td style="padding: 10px 0; color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px;">
                        <%= email %>
                      </td>
                    </tr>
                    <% if (phone) { %>
                    <tr>
                      <td style="padding: 10px 0; width: 30%; color: #6c757d; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 14px; font-weight: 600;">Phone</td>
                      <td style="padding: 10px 0; color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px;">
                        <%= phone %>
                      </td>
                    </tr>
                    <% } %>
                    <% if (subject) { %>
                    <tr>
                      <td style="padding: 10px 0; width: 30%; color: #6c757d; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 14px; font-weight: 600;">Subject</td>
                      <td style="padding: 10px 0; color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px;">
                        <%= subject %>
                      </td>
                    </tr>
                    <% } %>
                  </table>
                </td>
              </tr>
            </table>

            <!-- Message -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; border: 1px solid #e9ecef; border-radius: 10px;">
              <tr>
                <td style="padding: 20px;">
                  <h4 style="margin: 0 0 10px 0; color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px; letter-spacing: 0.2px; text-transform: uppercase;">
                    Message
                  </h4>
                  <p style="margin: 0; color: #495057; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px; line-height: 1.8; white-space: pre-line;">
                    <%= message %>
                  </p>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
