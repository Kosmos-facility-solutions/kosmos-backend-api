<!-- service_request_staff_assignment.ejs -->
<!-- BEGIN BODY // -->
<table border="0" cellpadding="0" cellspacing="0" width="600" id="templateBody" style="background-color: #f8f9fa;">
  <tr>
    <td valign="top" class="bodyContainer">
      <!-- Header with Logo -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; padding: 40px 0; border-bottom: 1px solid #e9ecef;">
        <tr>
          <td align="center">
            <h1 style="color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 26px; margin: 0; font-weight: 700; letter-spacing: -0.5px;">
              <span style="color: #0066FF;">KOSMOS</span> FACILITY SOLUTIONS
            </h1>
            <p style="color: #6c757d; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 13px; margin: 8px 0 0 0; font-weight: 500;">
              Service Assignment Notification
            </p>
          </td>
        </tr>
      </table>

      <!-- Main Content -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; padding: 45px 40px;">
        <tr>
          <td>
            <!-- Badge -->
            <table border="0" cellpadding="0" cellspacing="0" style="margin: 0 0 25px 0;">
              <tr>
                <td style="background: linear-gradient(135deg, #00b894 0%, #019874 100%); color: #ffffff; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 12px; font-weight: 600; padding: 10px 24px; border-radius: 24px; text-transform: uppercase; letter-spacing: 0.5px;">
                  üöÄ New Assignment
                </td>
              </tr>
            </table>

            <h2 style="color: #1a2332; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 30px; margin: 0 0 10px 0; font-weight: 600;">
              You have been assigned to Service Request #<%= requestId %>
            </h2>

            <p style="color: #495057; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; font-size: 15px; line-height: 1.7; margin: 0 0 25px 0;">
              Hi <strong><%= staffName %></strong>, please review the service details below and confirm that you are ready for the visit.
            </p>

            <!-- Service Summary -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f1f5ff; border-radius: 10px; border-left: 4px solid #0066FF; margin: 0 0 30px 0;">
              <tr>
                <td style="padding: 24px;">
                  <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                      <td style="width: 50%; padding: 6px 0; color: #6c757d; font-size: 13px;">Service</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px; font-weight: 600;"><%= serviceName %></td>
                    </tr>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Priority</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px; font-weight: 600;"><%= priority %></td>
                    </tr>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Scheduled Date</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px;"><%= scheduledDate %> at <%= scheduledTime %></td>
                    </tr>
                    <% if (walkthroughDate) { %>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Walkthrough</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px;"><%= walkthroughDate %> <% if (walkthroughTime) { %>at <%= walkthroughTime %><% } %></td>
                    </tr>
                    <% } %>
                    <% if (estimatedDuration) { %>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Estimated Duration</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px;"><%= estimatedDuration %> min</td>
                    </tr>
                    <% } %>
                    <% if (isRecurring) { %>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Recurrence</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px;">Repeats <%= recurrenceFrequency %></td>
                    </tr>
                    <% } %>
                  </table>
                </td>
              </tr>
            </table>

            <!-- Property Details -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; border-radius: 10px; border: 1px solid #e9ecef; margin: 0 0 25px 0;">
              <tr>
                <td style="padding: 24px;">
                  <h3 style="color: #1a2332; font-size: 16px; margin: 0 0 12px 0; font-weight: 600;">üìç Property Details</h3>
                  <p style="color: #495057; font-size: 14px; margin: 0 0 4px 0;"><strong><%= propertyName %></strong></p>
                  <p style="color: #6c757d; font-size: 14px; margin: 0 0 16px 0;"><%= propertyAddress %></p>
                  <% if (propertyContactName || propertyContactPhone) { %>
                  <p style="color: #495057; font-size: 14px; margin: 0 0 12px 0;">
                    Contact: <%= propertyContactName || 'N/A' %> <% if (propertyContactPhone) { %>- <%= propertyContactPhone %><% } %>
                  </p>
                  <% } %>
                  <% if (propertyAccessInstructions) { %>
                  <div style="background-color: #fff8e1; padding: 12px 16px; border-radius: 8px; color: #856404; font-size: 13px;">
                    <strong>Access Instructions:</strong><br />
                    <%= propertyAccessInstructions %>
                  </div>
                  <% } %>
                </td>
              </tr>
            </table>

            <!-- Customer Details -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #f8f9fa; border-radius: 10px; border: 1px solid #e9ecef; margin: 0 0 25px 0;">
              <tr>
                <td style="padding: 24px;">
                  <h3 style="color: #1a2332; font-size: 16px; margin: 0 0 12px 0; font-weight: 600;">üë§ Customer</h3>
                  <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                      <td style="width: 40%; padding: 6px 0; color: #6c757d; font-size: 13px;">Name</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px; font-weight: 600;"><%= customerName %></td>
                    </tr>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Email</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px;"><%= customerEmail %></td>
                    </tr>
                    <% if (customerPhone) { %>
                    <tr>
                      <td style="padding: 6px 0; color: #6c757d; font-size: 13px;">Phone</td>
                      <td style="padding: 6px 0; color: #1a2332; font-size: 14px;"><%= customerPhone %></td>
                    </tr>
                    <% } %>
                  </table>
                </td>
              </tr>
            </table>

            <% if (specialInstructions || notes) { %>
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #ffffff; border-radius: 10px; border: 1px solid #e9ecef; margin: 0 0 30px 0;">
              <tr>
                <td style="padding: 24px;">
                  <h3 style="color: #1a2332; font-size: 16px; margin: 0 0 12px 0; font-weight: 600;">üìù Notes</h3>
                  <% if (specialInstructions) { %>
                  <p style="color: #495057; font-size: 14px; margin: 0 0 12px 0;">
                    <strong>Special Instructions:</strong> <%= specialInstructions %>
                  </p>
                  <% } %>
                  <% if (notes) { %>
                  <p style="color: #495057; font-size: 14px; margin: 0;">
                    <strong>Internal Notes:</strong> <%= notes %>
                  </p>
                  <% } %>
                </td>
              </tr>
            </table>
            <% } %>

            <!-- CTA Button -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 0 0 10px 0;">
              <tr>
                <td align="center">
                  <a href="<%= dashboardUrl %>" style="background-color: #0066FF; color: #ffffff; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif; padding: 14px 28px; border-radius: 28px; text-decoration: none; font-weight: 600; font-size: 14px; display: inline-block;">
                    View Assignment
                  </a>
                </td>
              </tr>
            </table>

            <p style="color: #adb5bd; font-size: 12px; text-align: center; margin: 20px 0 0 0;">
              Need help? Contact the operations team at support@kosmosfs.com
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- // END BODY -->
